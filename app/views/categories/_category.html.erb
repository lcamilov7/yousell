<div class='flex justify-between bg-neutral-500 mb-2 py-3 px-5 w-2/3 rounded'>
  <p class='text-gray-200'><%= category.name %></p>
  <div>
    <%= link_to edit_category_path(category) do %>
      <i class='fa-solid fa-pen-to-square text-gray-200 hover:text-gray-600 me-2'></i>
    <% end %>
    <%= link_to category_path(category), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
      <i class='fa-solid fa-ban text-red-500 hover:text-red-800 ms-2'></i>
    <% end %>
  </div>
</div>

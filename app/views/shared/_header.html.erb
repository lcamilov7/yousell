<div class='bg-neutral-600 flex justify-between items-center px-2' data-controller='button-menu'>
  <%= link_to products_path do %>
    <h1 class='text-2xl font-bold text-teal-500'>YouSell</h1>
  <% end %>

  <button class='sm:hidden' data-action="click->button-menu#toggle">
    <i class="fa-solid fa-bars text-xl text-teal-500"></i>
  </button>
  <%# Este div sera el que mostaremos cuando le den al button de mas arriba en version movil %>
  <div data-button-menu-target='menu' class='sm:hidden gap-4 absolute border-gray-200 border-l-[1px] top-0 right-0 shadow z-10 h-full flex flex-col min-w-[45%] overflow-y-scroll ease-in-out duration-200 p-5 translate-x-full' style='background: transparent; backdrop-filter: blur(20px);'>
    <button data-action="click->button-menu#toggle" class='mb-4'><i class="fa-solid fa-x text-red-600"></i></button>
    <%= render(partial: 'shared/items') %>
  </div>

  <div class='hidden sm:block'>
    <%= render(partial: 'shared/items') %>
  </div>
</div>

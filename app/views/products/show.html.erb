<h1 class='title'><%= @product.title %></h1>
<p class='description'><%= @product.description %></p>
<span class='price'><%= @product.price %></span>
<%= image_tag(@product.photo, width: 200) if @product.photo.attached? %>
<p>Created by:<%= link_to "#{@product.user.username}", user_path(@product.user.username) %></p>

<% if @product.favorite? %>
  <%= link_to '💔', favorite_path(product_id: @product.id), data: { turbo_method: :delete } unless @product.owner? %>
<% else %>
  <%= link_to '❤️', favorites_path(product_id: @product.id), data: { turbo_method: :post } unless @product.owner? %>
<% end %>

<%= link_to 'Edit product', edit_product_path(@product) if @product.owner? %>
<%= link_to 'Delete product', product_path(@product), data: { turbo_method: :delete, turbo_confirm: 'Delete product?' } if @product.owner? %>

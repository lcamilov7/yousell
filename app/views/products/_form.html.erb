<%= form_with model: @product do |f| %>
  <div>
    <% @product.errors.full_messages.each do |error| %>
      <p><%= error %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
  <%= f.label :description %>
  <%= f.text_area :description %>
  </div>
  
  <% if @product.new_record? %>
    <div>
      <%= f.label :price %>
      <%= f.number_field :price %>
    </div>
  <% end %>

  <div>
    <%# :category_id es lo que envia a la petición, el select se rellena con Category.order('name ASC'), y el select va enviar el :id pero mostrará el :name %>
    <%= f.collection_select :category_id, Category.order('name ASC'), :id, :name %>
  </div>

    <div>
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
